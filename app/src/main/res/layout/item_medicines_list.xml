<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
app:cardCornerRadius="20dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@drawable/bg_cart"
            >
            <ImageView
                android:id="@+id/image_medicine_shop"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="6dp"
                android:scaleType="fitXY"
                android:src="@drawable/pnadol"/>

            <TextView
                android:id="@+id/tvproductname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"
                android:layout_toEndOf="@+id/image_medicine_shop"
                android:text="Panadol"
                android:textColor="@color/black"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/image_medicine_shop" />
            <TextView
                android:id="@+id/med_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"
                android:layout_toEndOf="@+id/image_medicine_shop"
                android:text="30 pils"
                android:layout_below="@+id/tvproductname"
                android:textColor="@color/black"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/image_medicine_shop" />

            <TextView
                android:id="@+id/tvstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="Available"
                android:textColor="#FF0000"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="6dp"
                android:background="@null"
                android:foreground="?attr/selectableItemBackground" />
            <TextView
                android:id="@+id/tvprice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"
                android:layout_toEndOf="@+id/image_medicine_shop"
                android:text="RS217"
                android:layout_below="@+id/med_qty"
                android:textColor="#FF0000"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/image_medicine_shop" />


            <com.google.android.material.floatingactionbutton.FloatingActionButton
               android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_add_24_white"
                android:layout_below="@+id/tvstatus"
                android:layout_alignParentEnd="true"
                android:layout_margin="16dp"
                app:tint="@color/white"
                android:backgroundTint="@color/COLOR_8"
                android:layout_alignParentRight="true"
                tools:ignore="InvalidId" />



        </RelativeLayout>




    </androidx.cardview.widget.CardView>
</LinearLayout>