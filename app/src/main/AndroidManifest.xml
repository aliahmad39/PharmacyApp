<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uniquesolutions.carepharmacy">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CarePharmacy">
        <activity android:name=".Activities.AdminDevicesActivity">


        </activity>
        <activity android:name=".Activities.OrderActivity" />
        <activity android:name=".Activities.AdminAddMedicineActivity">

        </activity>
        <activity android:name=".Activities.AdminActivity" />
        <activity android:name=".Activities.CartActivity" />
        <activity android:name=".Activities.SignUpActivity" />
        <activity android:name=".Activities.SignInActivity" />
        <activity
            android:name=".Activities.PhoneNumberActivity"
            android:windowSoftInputMode="stateVisible" />
        <activity
            android:name=".Activities.OTPActivity"
            android:windowSoftInputMode="stateVisible" />
        <activity android:name=".Activities.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".Activities.ProfileActivity" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.CarePharmacy.NoActionBar" />
    </application>

</manifest>